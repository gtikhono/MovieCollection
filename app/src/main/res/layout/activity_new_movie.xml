<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="gtikhono.msse.asu.edu.moviecollection.newMovieActivity"
    android:background="#bfe4c6">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#d3f7da">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/table"
            android:background="#d3f7da">
            <TableRow>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:id="@+id/saveButton"
                    android:layout_column="1"
                    android:enabled="false" />
            </TableRow>

            <TableRow>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/newTitle"
                    android:layout_column="1"
                    android:textSize="40dp"
                    android:layout_span="2"
                    android:hint="Enter Title"/>

            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#24273c"
                android:layout_width="match_parent"/>

            <TableRow>

            </TableRow>

            <TableRow android:orientation="vertical">
                <TextView
                    android:layout_column="1"
                    android:text="Year"
                    android:padding="8dip"
                    android:textSize="20dp"
                    android:textIsSelectable="false"
                    />

                <EditText
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/newYear"
                    android:layout_column="2"
                    android:layout_span="1"
                    android:maxWidth="225dp" />

            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="Rated"
                    android:padding="8dip"
                    android:textSize="20dp"
                    android:textIsSelectable="false" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/newRated"
                    android:layout_column="2"
                    android:maxWidth="225dp" />

            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="Released"
                    android:padding="8dip"
                    android:textSize="20dp"
                    android:textIsSelectable="false" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/newReleased"
                    android:layout_column="2"
                    android:maxWidth="225dp" />

            </TableRow>

            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="Runtime"
                    android:padding="8dip"
                    android:textSize="20dp"
                    android:textIsSelectable="false" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/newRuntime"
                    android:layout_column="2"
                    android:maxWidth="225dp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="Genre"
                    android:padding="8dip"
                    android:textSize="20dp"
                    android:textIsSelectable="false" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner"
                    android:layout_column="2"
                    android:entries="@array/array_name"
                    />

            </TableRow>

            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="Actors"
                    android:padding="8dip"
                    android:textSize="20dp"
                    android:textIsSelectable="false" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/newActors"
                    android:layout_column="2"
                    android:maxWidth="225dp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="Plot"
                    android:padding="8dip"
                    android:textSize="20dp"
                    android:textIsSelectable="false" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/newPlot"
                    android:layout_column="2"
                    android:maxWidth="225dp" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:id="@+id/urlET"
                    android:layout_column="2"
                    android:text="@string/defaulturl"
                    android:layout_gravity="right" />
            </TableRow>

        </TableLayout>


    </ScrollView>

</LinearLayout>
